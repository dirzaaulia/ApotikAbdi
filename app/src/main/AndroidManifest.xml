<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.apotikabdi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        tools:ignore="AllowBackup"
        tools:replace="android:allowBackup">

        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragment.antrian.EditorAntrianActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".fragment.pasien.EditorPasienActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".fragment.resep.EditorResepActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".fragment.pengambilanobat.EditorPengambilanObatActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".fragment.rekomendasi.RekomendasiActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".fragment.rekomendasi.EditorRekomendasiActivity"
            android:launchMode="singleTask"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
    </application>

</manifest>